{
    "appId": "com.yourcompany.invoiceapp",
    "productName": "Invoice Management App",
    "directories": {
        "output": "dist"
    },
    "files": [
        "dist/**/*",
        "electron/**/*",
        "node_modules/**/*"
    ],
    "win": {
        "target": "nsis",
        "icon": "assets/icon.ico"
    },
    "mac": {
        "target": "dmg",
        "icon": "assets/icon.icns"
    },
    "linux": {
        "target": "AppImage",
        "icon": "assets/icon.png"
    }
}